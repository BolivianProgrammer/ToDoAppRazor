<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiPanel</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">MP MiPanel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#" id="toggleSidebar">
                                <i class="fas fa-bars me-1"></i> Navegacion
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-lg-2 d-md-block sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Tareas Pendientes" ? "active" : "")" href="/">
                            <i class="fas fa-clipboard-list"></i> Tareas Pendientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Tareas Terminadas" ? "active" : "")" href="/TareasFinalizadas">
                            <i class="fas fa-check-circle"></i> Tareas Terminadas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Tareas Canceladas" ? "active" : "")" href="/TareasCanceladas">
                            <i class="fas fa-ban"></i> Tareas Canceladas
                        </a>
                    </li>
                </ul>
            </div>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('toggleSidebar').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('show');
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
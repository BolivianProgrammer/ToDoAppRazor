@page
@model TareasFinalizadasModel
@{
    ViewData["Title"] = "Tareas Terminadas";
}

<div class="container-fluid">
    <h1><i class="fas fa-check-double me-2"></i>Tareas Terminadas</h1>

    @if (!string.IsNullOrEmpty(Model.MensajeError))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @Model.MensajeError
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive mb-3">
        <table class="table">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Nombre Tarea</th>
                    <th>Fecha Vencimiento</th>
                    <th>Estado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.TareasTerminadas != null && Model.TareasTerminadas.Any())
                {
                    int numeracion = Model.Paginacion.IndiceInicial;
                    @foreach (var tarea in Model.TareasTerminadas)
                    {
                        numeracion++;
                        <tr>
                            <td>@numeracion</td>
                            <td>@tarea.Nombre</td>
                            <td>@tarea.FechaFormateada()</td>
                            <td><span class="badge @tarea.BadgeClass()">@tarea.Estado</span></td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-primary"><i class="fas fa-undo"></i></button>
                                <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-3">
                            <div class="d-flex flex-column align-items-center">
                                <i class="fas fa-info-circle fa-2x text-info mb-2"></i>
                                <p class="m-0">Aún no hay tareas terminadas.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.Paginacion.TotalTareas > 0)
    {
        <partial name="_Paginacion" model="Model.Paginacion" />
    }
</div>